<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MM"
    android:padding="16dp"
    tools:context=".kotlinapp.ui.fragments.FilmPageFragment">

    <LinearLayout style="@style/LVMW">

        <FrameLayout
            style="@style/WW"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/film_poster_image"
                style="@style/W132_H201.fitXY"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRadius4dp"
                tools:src="@tools:sample/avatars" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/poster_not_found_image"
                style="@style/W56_H56.Center"
                app:srcCompat="@drawable/img_poster_not_found"
                tools:src="@tools:sample/avatars" />
        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/film_name_text"
            style="@style/Roboto700.Black_00.Size26.WW"
            android:layout_marginTop="24dp"
            tools:text="Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/genres_year_text"
            style="@style/Roboto400.Gray_4b.Size16.WW"
            android:layout_marginTop="8dp"
            tools:text="genre, year" />

        <LinearLayout style="@style/LHWW"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/film_rating_text"
                style="@style/Roboto700.Purple_6936d6.Size24.WW"
                tools:text="Rating" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/rating_source_text"
                style="@style/Roboto500.Purple_6936d6.Size16.WW"
                android:layout_marginStart="8dp"
                tools:text="Kinopoisk" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/film_description_text"
            style="@style/Roboto400.Black_00.Size14.MW"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="6sp"
            tools:text="Description" />

    </LinearLayout>
</ScrollView>