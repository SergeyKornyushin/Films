<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LVMW">

    <FrameLayout
        style="@style/MM">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/film_poster_image"
            style="@style/M_H216.White_ef.Center_crop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRadius4dp"
            />

    </FrameLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/film_name_text"
        style="@style/Roboto700.Black_00.Size16.M_H40"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        tools:text="Побег из Шоушенка" />

</LinearLayout>